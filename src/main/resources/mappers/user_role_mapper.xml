<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.security_practice.mapper.UserRoleMapper">
    <resultMap id="UserRoleResultMap" type="com.korit.security_practice.entity.UserRole">
        <id property="userRoleId" column="user_role_id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
        <association property="role" resultMap="RoleResultMap"/>
    </resultMap>
    <resultMap id="RoleResultMap" type="com.korit.security_practice.entity.Role">
        <id property="roleId" column="role_id"/>
        <result property="roleName" column="role_name"/>
        <result property="roleNameKor" column="role_name_kor"/>
    </resultMap>
    <insert id="addUserRole" useGeneratedKeys="true" keyProperty="roleId">
        insert into
            user_role_tb
        values
            (0, #{userId}, #{roleId});
    </insert>
</mapper>
