<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.security_practice.mapper.VerifyMapperr">
    <resultMap id="VerifyResultMap" type="com.korit.security_practice.entity.Verify">
        <id property="verifyId" column="verify_id"/>
        <result property="userId" column="user_id"/>
        <result property="verifyCode" column="verify_code"/>
    </resultMap>
    <resultMap id="RoleResultMap" type="com.korit.security_practice.entity.Role">
        <id property="roleId" column="role_id"/>
        <result property="roleName" column="role_name"/>
        <result property="roleNameKor" column="role_name_kor"/>
    </resultMap>
    <insert id="addVerify" useGeneratedKeys="true" keyProperty="roleId">
        insert into
            verify_tb
        values
            (0, #{userId}, #{verifyCode});
    </insert>
    <select id="findVerify">
        select
            *
        from
            verify_tb
        where
            user_id = #{userId};
    </select>
    <delete id="deleteVerify">
        delete from
            verify_tb
        where
            user_id = #{userId}
    </delete>
</mapper>